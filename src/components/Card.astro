---
import { Picture } from "astro:assets";

export interface Props {
	title?: string;
	body?: string;
	img?: any;
	classes?: string;
}

const { classes, img, title, body } = Astro.props;
---

<article
	class:list={[
		"border-2 rounded-md max-w-none prose prose-a:no-underline shadow-lg flex flex-col lg:flex-row lg:even:flex-row-reverse lg:gap-4",
		classes,
	]}>
	<div class="flex flex-col gap-4 p-4">
		<header class="mb-auto">
			<h2 class="mt-0">
				{title}
			</h2>
			<p>{body}</p>
		</header>
		<slot />
	</div>
	{
		img && (
			<Picture
				src={img}
				formats={["webp"]}
				width={1000}
				densities={[1.5, 2]}
				alt={title ?? ""}
				class="w-full h-full object-center object-contain"
				pictureAttributes={{ class: "w-full  m-0" }}
			/>
		)
	}
</article>

---
export interface Props {
  title?: string;
  body?: string;
  href?: string;
  img?: string;
  classes?: string;
}

const { classes, img, href, title, body } = Astro.props;
---

<article
  class:list={[
    "border-2 rounded-md max-w-none prose prose-a:no-underline shadow flex flex-col dark:prose-invert dark:shadow-white",
    classes,
  ]}
>
  <slot>
    <header class="p-4 pb-0">
      <a href={href}>
        <h3 class="mt-0">
          {title}
        </h3>
      </a>
    </header>
    <p
      class:list={["px-4 my-0", { "pb-4": !Astro.slots.has("footer") && !img }]}
    >
      {body}
    </p>
    {img && <img src={img} alt="" />}
    {Astro.slots.has("footer") && <slot name="footer" />}
  </slot>
</article>

const projects = [
  {
    title: "Terninge spil",
    text: "Jeg har lavet et lille terninge spil i vue 3, hvor 2+ spillere skiftes til at slå med en terning. ",
    image: CaseImgDice,
    tags: [tools[6], tools[2], tools[9]],
    github: "https://github.com/MLousdal/Vue-Dice-Game",
    link: "https://vue-dice-game.vercel.app/",
  },
  {
